<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>

  <property>
    <name>druid.port</name>
    <value>${@//site/broker/port}</value>
  </property>
  <property>
    <name>druid.service</name>
    <value>broker</value>
  </property>

  <property>
    <name>druid.extensions.coordinates</name>
    <value>["io.druid.extensions:druid-hdfs-storage:${@//site/global/druid_version}"]</value>
  </property>

  <property>
    <name>druid.broker.cache.useCache</name>
    <value>true</value>
  </property>
  <property>
    <name>druid.broker.cache.populateCache</name>
    <value>true</value>
  </property>
  <property>
    <name>druid.broker.cache.unCacheable</name>
    <value>["groupBy", "select"]</value>
  </property>
  <property>
    <name>druid.broker.cache.sizeInBytes</name>
    <value>4294967296</value>
  </property>

</configuration>
