<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
  <property>
    <name>xmx</name>
    <value>4g</value>
  </property>
  <property>
    <name>xms</name>
    <value>2g</value>
  </property>
  <property>
    <name>extension.metadata</name>
    <value>io.druid.extensions:mysql-metadata-storage</value>
  </property>
  <property>
    <name>extension.storage</name>
    <value>io.druid.extensions:druid-hdfs-storage</value>
  </property>
  <property> <!-- needed for realtime node -->
    <name>java.io.tmpdir</name>
    <value>${@//site/global/container_root}/tmp</value>
  </property>
  <property>
    <name>java.options</name>
    <value>-XX:+DisplayVMOutputToStderr -Xmx${@//site/druid/xmx} -Xms${@//site/druid/xms} -Djava.library.path=/usr/lib/hadoop/lib/native</value>
  </property>
  <property>
    <name>user.timezone</name>
    <value>UTC</value>
  </property>
  <property>
    <name>file.encoding</name>
    <value>UTF-8</value>
  </property>
  <property>
    <name>mysql.host</name>
    <value>mysql</value>
  </property>
  <property>
    <name>mysql.database</name>
    <value>druid</value>
  </property>
</configuration>
