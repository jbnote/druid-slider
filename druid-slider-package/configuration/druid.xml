<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
<!--${@//site/global/app_root}/lib/javax.servlet-api-3.1.0.jar:${@//site/global/app_root}/lib/guava-16.0.1.jar:/etc/hadoop/conf:/usr/lib/hadoop/lib/*:/usr/lib/hadoop/*:/usr/lib/hadoop-hdfs/:/usr/lib/hadoop-hdfs/lib/*:/usr/lib/hadoop-hdfs/*:/usr/lib/hadoop-yarn/lib/*:/usr/lib/hadoop-yarn/*:/usr/lib/hadoop-0.20-mapreduce/:/usr/lib/hadoop-0.20-mapreduce/lib/*:/usr/lib/hadoop-0.20-mapreduce/*-->
  <property>
    <name>hadoop.classpath</name>
    <value>/etc/hadoop/conf</value>
  </property>
  <property>
    <name>xmx</name>
    <value>4g</value>
  </property>
  <property>
    <name>xms</name>
    <value>2g</value>
  </property>
  <property> <!-- needed for realtime node -->
    <name>java.io.tmpdir</name>
    <value>${@//site/global/container_root}/tmp</value>
  </property>
  <property>
    <name>java.options</name>
    <value>-XX:+DisplayVMOutputToStderr -Xmx${@//site/druid/xmx} -Xms${@//site/druid/xms} -Djava.library.path=/usr/lib/hadoop/lib/native</value>
  </property>
  <property>
    <name>user.timezone</name>
    <value>UTC</value>
  </property>
  <property>
    <name>file.encoding</name>
    <value>UTF-8</value>
  </property>
  <property>
    <name>mysql.host</name>
    <value>mysql</value>
  </property>
  <property>
    <name>mysql.database</name>
    <value>druid</value>
  </property>
</configuration>
